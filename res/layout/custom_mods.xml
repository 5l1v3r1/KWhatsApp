<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tb6" android:layout_gravity="center_horizontal"
            android:textOff="@string/HideDate" android:textOn="@string/ShowDate" />
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tb7" android:layout_gravity="center_horizontal"
            android:textOff="Enable Text Select" android:textOn="Disable Text Select" />
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tb8" android:layout_gravity="center_horizontal"
            android:textOff="@string/CallBtn" android:textOn="@string/sCallBtn" />
</LinearLayout>